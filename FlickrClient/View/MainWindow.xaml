<Window x:Class="FlickrClient.View.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:components="clr-namespace:FlickrClient.Components;assembly=FlickrClient.Components"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:local="clr-namespace:FlickrClient"
        xmlns:vm="clr-namespace:FlickrClient.ViewModel"
        xmlns:upload="clr-namespace:FlickrClient.Upload.View;assembly=FlickrClient.Upload"
        mc:Ignorable="d"
        DataContext="{components:ViewModelBinding ViewModelType={x:Type vm:MainWindowViewModel}}"
        Title="Flickr" 
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">     
    <materialDesign:DialogHost Style="{StaticResource MaterialDesignEmbeddedDialogHost}" 
                               Identifier="DialogHost"
                               >
        <materialDesign:DialogHost Style="{StaticResource MaterialDesignEmbeddedDialogHost}" 
                                   Identifier="MessageHost"
                                   CloseOnClickAway="True">
            <Grid>
                <Grid x:Name="MenuGrid" 
                      Width="300"
                      HorizontalAlignment="Left">
                    <StackPanel>
                        <Image Height="200"/>
                        <ListView FontSize="18">
                            <ListViewItem Height="45" Padding="0">
                                <StackPanel Orientation="Horizontal" Margin="10, 0">
                                    <materialDesign:PackIcon Kind="PhotoLibrary" 
                                                             VerticalAlignment="Center"
                                                             Width="20"
                                                             Height="20"
                                                             Foreground="Gray"/>
                                    <TextBlock Text="Fotostream" 
                                               Margin="10"
                                               Foreground="Gray"/>                                   
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Height="45" Padding="0">
                                <StackPanel Orientation="Horizontal" Margin="10, 0">
                                    <materialDesign:PackIcon Kind="PhotoAlbum" 
                                                             VerticalAlignment="Center"
                                                             Width="20"
                                                             Height="20"
                                                             Foreground="Gray"/>
                                    <TextBlock Text="Alben" 
                                               Margin="10"
                                               Foreground="Gray"/>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                    </StackPanel>
                    <Button x:Name="CloseButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </Grid>
            </Grid> 
        </materialDesign:DialogHost>
    </materialDesign:DialogHost>
</Window>
